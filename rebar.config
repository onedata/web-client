%% behaviours should be compiled before other files
{erl_first_files, [
    "src/websocket_client/websocket_client_handler_behaviour.erl"
]}.

{erl_opts, [
    fail_on_warning,
    {src_dirs, ["src"]},
    debug_info
]}.

%% eunit opts - Maven-like output formatting
{eunit_opts, [
    verbose,
    {report, {eunit_surefire, [{dir, "../test/eunit_results"}]}}
]}.

%% Test coverage
{cover_enabled, true}.

%% deps directory
{lib_dirs, ["deps"]}.

{deps, [
    {hackney, ".*", {git, "git://github.com/benoitc/hackney.git", {tag, "1.3.x"}}},
    {ssl2, ".*", {git, "ssh://git@git.plgrid.pl:7999/vfs/erlang-tls.git", {tag, "9c513e827e5"}}},
    % Deps needed for tests
    {cowboy, ".*", {git, "git://github.com/RoXeon/cowboy.git", {tag, "websocket_payload_nif"}}},
    {meck, "0.8.2", {git, "https://github.com/eproxus/meck.git", {tag, "0.8.2"}}}
]}.

%% pre-hooks
{pre_hooks, [
    {eunit, "mkdir -p test/eunit_results"}, %% Make dir for eunit' surefire test results
    {eunit, "epmd -daemon"} %% Sometimes, in some cases epmd daemon doesn't start during eunit tests, so we need to force start it
]}.
    
%% Cleanup
{clean_files, ["test/eunit_results"]}.